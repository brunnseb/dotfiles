;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;; Bar Windows ;;
(defwindow left_bar
	:exclusive true
	:geometry (geometry :x "15px" 
						:y "0" 
						:anchor "left center"
						:width "40px")
	:stacking "fg"
	:windowtype "dock"
	:hexpand "false"
	:vexpand "false"
	:monitor 2
(ws_bar))

