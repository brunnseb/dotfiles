{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "control-center-margin-top": 16,
  "control-center-margin-bottom": 16,
  "control-center-margin-right": 16,
  "control-center-margin-left": 0,
  "notification-icon-size": 64,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "control-center-width": 530,
  "notification-window-width": 530,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {
    "urgent-sound": {
      "exec": "paplay /usr/share/sounds/freedesktop/stereo/bell.oga",
      "urgency": "Critical"
    },
    "normal-sound": {
      "exec": "paplay /usr/share/sounds/freedesktop/stereo/complete.oga",
      "urgency": "Normal"
    },
    "low-sound": {
      "exec": "paplay /usr/share/sounds/freedesktop/stereo/message.oga",
      "urgency": "Low"
    }
  },
  "notification-visibility": {
    "example-name": {
      "state": "muted",
      "urgency": "Low",
      "app-name": "Spotify"
    }
  },
  "widgets": [
    "buttons-grid",
    "volume",
    "backlight",
    "title",
    "dnd",
    "notifications"
  ],
  "widget-config": {
    "backlight": {
      "label": ""
    },
    "volume": {
      "label": ""
    },
    "buttons-grid": {
      "actions": [
        {
          "label": " ",
          "command": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
        },
        {
          "label": "",
          "command": "pactl set-source-mute @DEFAULT_SOURCE@ toggle"
        }
      ]
    }
  }
}
